mixin radio(model, id, value, label, required)
  div.radio
    label
      input(type='radio', ng-model='#{model}.#{id}', name='#{id}', value='#{value}', ng-required='#{required}')
      | #{label}

mixin checkbox(model, id, label)
  div.checkbox
    label
      input(type='checkbox', name='#{id}', ng-model='#{model}.#{id}')
      | #{label}

mixin switch(model, id)
  div.btn-group.btn-group-switch
    label.btn.btn-primary(ng-model='#{model}.#{id}', btn-checkbox btn-checkbox-true="false") No
    label.btn.btn-primary(ng-model='#{model}.#{id}', btn-checkbox btn-checkbox-true="true") Yes

mixin defaultedSwitch(model, id)
  div.btn-group.btn-group-switch
    label.btn.btn-primary(ng-model='#{model}.#{id}', ng-init='#{model}.#{id} = #{model}.#{id} || false', btn-checkbox btn-checkbox-true="false") No
    label.btn.btn-primary(ng-model='#{model}.#{id}', btn-checkbox btn-checkbox-true="true") Yes
