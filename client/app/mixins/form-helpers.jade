mixin input(model, type, id, label, requiredForm)
  if requiredForm
    .form-group(ng-class='{ "has-success": #{requiredForm}.#{id}.$valid && #{requiredForm}.$submitted,\
    "has-error": #{requiredForm}.#{id}.$invalid && #{requiredForm}.$submitted }')
      label.control-label.col-sm-2(for="#{id}") #{label}
      .col-sm-10
        input.form-control(id='#{id}', name='#{id}', type='#{type}', ng-model='#{model}.#{id}', required)
        p.help-block(ng-show='#{requiredForm}.#{id}.$error.required && #{requiredForm}.$submitted')
          | #{label} is required
  else
    .form-group
      label.control-label.col-sm-2(for="#{id}") #{label}
      .col-sm-10
        input.form-control(id='#{id}', name='#{id}', type='#{type}', ng-model='#{model}.#{id}')

