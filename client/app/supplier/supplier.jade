extends ../../layout/1_column
include ../mixins/results-helpers

block content
  h1 Suppliers

  div(ng-controller='ResultsCtrl')

    +pageListingNotice('suppliers')
    div(ng-hide='!total')
      +pagination()

      table.table.table-striped
        thead
          tr
            th Name
            th Website
        tbody
          tr(ng-repeat='item in items')
            td
              a(ng-href='/suppliers/{{ item._id }}') {{ item.name }}
            td {{ item.url }}

      +pagination()
