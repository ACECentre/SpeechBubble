extends ../../../layout/2_column

block content
  h1 Login
  p
    | Accounts are reset on server restart from
    code server/config/seed.js
    | . Default account is
    code user@acecentre.org.uk
    | /
    code letmein
  p
    | Admin account is
    code admin@acecentre.org.uk
    | /
    code letmein
      
  .social-connect.row
    .col-sm-4
      a.btn.btn-facebook(href='', ng-click='loginOauth("facebook")')
        i.fa.fa-facebook
        |  Facebook
      = ' '
    .col-sm-4
      a.btn.btn-google-plus(href='', ng-click='loginOauth("google")')
        i.fa.fa-google-plus
        |  Google+
      = ' '
    .col-sm-4
      a.btn.btn-twitter(href='', ng-click='loginOauth("twitter")')
        i.fa.fa-twitter
        |  Twitter
          
  hr   
  
  p Alternatively Enter your details below to login.

  form.form-horizontal(name='form', ng-submit='login(form)', novalidate='')
    .form-group(ng-class='{ "has-success": form.email.$valid && submitted,\
    "has-error": form.email.$invalid && submitted }')
      label.control-label.col-sm-3(for='email') Email *
      .col-sm-9
        input.form-control(type='text', id='email', name='email', ng-model='user.email', required='')
        p.help-block(ng-show='form.email.$error.required && submitted')
          | Please enter your email.
          
    .form-group(ng-class='{ "has-success": form.password.$valid && submitted,\
    "has-error": form.password.$invalid && submitted }')
      label.control-label.col-sm-3(for='password') Password *
      .col-sm-9
        input.form-control(type='password', id='password', name='password', ng-model='user.password', required='')
        p.help-block(ng-show='form.password.$error.required && submitted')
          | Please enter your password.
        p.help-block {{ errors.other }}

        hr

        button.btn.btn-primary(type='submit') Login
        p: small * Required fields
