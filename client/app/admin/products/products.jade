extends ../../../layout/2_column

block content
  button.btn.btn-primary.pull-right(ng-click='create()') New Product
  h1 Product Administration
  
  div(ng-controller='ProductsCtrl')
    
    hr
    .text-center
      pagination.pagination-sm(total-items='total', max-size='10', items-per-page='limit', ng-model='page', boundary-links='true')
    hr
  
    table.table.table-striped
      thead
        tr
          th Name
          th Type
          th Discontinued
          th.actions Actions
      tbody
        tr(ng-repeat='product in products')
          td {{ product.name }}
          td {{ product.__t | type }}
          td.icon
            span.glyphicon(ng-class='product.discontinued ? "glyphicon-remove-circle": "glyphicon-ok-circle"')
          td.actions
            a(href='#', ng-click='edit(product)'): span.glyphicon.glyphicon-edit
            a(href='#', ng-click='delete(products.name, product)'): span.glyphicon.glyphicon-trash
              
    hr
    .text-center
      pagination.pagination-sm(total-items='total', max-size='10', items-per-page='limit', ng-model='page', boundary-links='true', ng-change='')
    hr
