extends ../../../layout/2_column
include ../../mixins/results-helpers

block content
  button.btn.btn-primary.pull-right(ng-click='create()') New Product
  h1 Product Administration
  
  div(ng-controller='ResultsCtrl')
    
    +pagination()
  
    table.table.table-striped
      thead
        tr
          th Name
          th Type
          th Discontinued
          th.actions Actions
      tbody
        tr(ng-repeat='item in items')
          td {{ item.name }}
          td {{ item.type | type }}
          td.icon
            span.glyphicon(ng-class='item.discontinued ? "glyphicon-ok-circle": "glyphicon-remove-circle"')
          td.actions
            a(href='#', ng-click='edit(item)'): span.glyphicon.glyphicon-edit
            a(href='#', ng-click='delete(item.name, item)'): span.glyphicon.glyphicon-trash
              
    +pagination()
