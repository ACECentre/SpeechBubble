include ../../../mixins/form-helpers
include ../form-helpers

.modal-header
  button.close(type='button', ng-click='cancel()') Ã—
  h3.modal-title Access Solutions product

form.form-horizontal(name='form', novalidate)
  fieldset(ng-disabled='isSaving')
    .modal-body
      .panel.panel-default
        .panel-heading Product Details
        .panel-body
          input(type='hidden', ng-init='product.type = "ProductAccessSolution"')
          +productDetails()

      .panel.panel-default
        .panel-heading Category
        .panel-body
          +radio('product.features', 'category', 'switch', 'Switch', true)
          +radio('product.features', 'category', 'eyegaze', 'Eyegaze', true)
          +radio('product.features', 'category', 'mouse', 'Mouse', true)
          +radio('product.features', 'category', 'alternative', 'Alternative/Keyboard', true)
          +radio('product.features', 'category', 'force', 'Movement/force', true)
          +radio('product.features', 'category', 'discrete', 'Discrete', true)
          +radio('product.features', 'category', 'gross', 'Gross', true)

      +productImages()
      +productVideos()
      +vocabularies()
      +price()
      +productRevisions('product')

    +draftActions()
