include ../../../mixins/form-helpers
include ../form-helpers
.modal-header
  button.close(type='button', ng-click='cancel()') Ã—
  h3.modal-title Software product
form.form-horizontal(name='form', ng-submit='save(form)', novalidate)
  .modal-body
    .panel.panel-default
      .panel-heading Product Details
      .panel-body
        input(type='hidden', ng-init='product.type = "ProductHardwareSimple"')
        +productDetails()

    +imageRepresentationSupported()
    +speechTypeOptions()
    +price()

    .panel.panel-default
      .panel-heading Support Multiple Users?
      .panel-body
        +switch('product.features', 'supportMultipleUsers')

    +enviroControl()

    .panel.panel-default
      .panel-heading Control of another computer/device from software possible?
      .panel-body
        +switch('product.features', 'controlAnotherDeviceFromSoftware')

    .panel.panel-default
      .panel-heading Control of wider operating system possible from software?
      .panel-body
        +switch('product.features', 'controlOperatingSystemFromSoftware')

    +addMoreInformation()

  .modal-footer
    button.btn.btn-primary() Create
    a.btn.btn-tertiary(ng-click='cancel()') Cancel
