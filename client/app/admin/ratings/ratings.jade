extends ../../../layout/2_column
include ../../mixins/results-helpers

block content
  h1 Rating Administration

  div(ng-controller='ResultsCtrl')

    +pageListingNotice('ratings')
    div(ng-hide='!total')
      +pagination()
      table.table.table-striped
        thead
          tr
            th Product
            th Average Rating
            th Total Reviews
            th.actions Actions
        tbody
          tr(ng-repeat='item in items')
            td: a(ng-href='/products/{{ item.product._id }}', target='_blank') {{ item.product.name }}
            td {{ item.average | number: 2 }}
            td {{ item.reviews.length }}
            td.actions
              a(href='#', ng-click='edit(item)'): span.glyphicon.glyphicon-edit
      +pagination()
