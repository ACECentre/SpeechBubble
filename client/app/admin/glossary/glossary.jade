extends ../../../layout/2_column
include ../../mixins/results-helpers

block content
  button.btn.btn-primary.pull-right(ng-click='create()') New Item
  h1 Glossary Admin

  div(ng-controller='ResultsCtrl')

    +pageListingNotice('glossary')
    div(ng-hide='!total')
      +pagination()
      table.table.table-striped
        thead
          tr
            th Title
            th Description
            th.actions Actions
        tbody
          tr(ng-repeat='item in items')
            td {{ item.title }}
            td(ng-bind-html='item.description')
            td.actions
              a(href='#', ng-click='edit(item)'): span.glyphicon.glyphicon-edit
              a(href='#', ng-click='delete(item.title, item)'): span.glyphicon.glyphicon-trash
      +pagination()
