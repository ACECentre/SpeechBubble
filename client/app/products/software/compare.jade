include ../../mixins/product-helpers

.modal-header
  button.close(type='button', ng-click='cancel()') Ã—
  h3.modal-title Comparing {{ products.length }} {{ products[0].type | type | lowercase }} products
.modal-body
  table.table.table-striped
    thead
      tr
        th
        th.text-center(ng-repeat='product in products') {{ product.name }}
    tbody
      +compareThumbnail()
      +compareRating()
      +compareTickRow('Discontinued', 'product.discontinued')
      +compareFormsOfRepresentation()
      tr
        th Speech type options
        td.text-center(ng-repeat='product in products')
          +textLineIf('Synthesised', 'product.features.speechTypeOptions.synthesised')
          +textLineIf('Recorded', 'product.features.speechTypeOptions.recorded')
          +textLineIf('-', '!product.features.speechTypeOptions.synthesised && !product.features.speechTypeOptions.recorded')

      +compareEnviroControl()
      +compareVisualOptions()
      +compareSupportedDevices()
      +comparePrice()
      +compareAccessMethods()
      +compareViewActions()
